
  <div id="C_page" style="background-color:#f4f4f4">
    <div id="page_content" >
      <div class="row">

        <div id="chapterHeader" class="col-md-12" style="margin-bottom:20px">
          <h1 id="group_h1" style="text-align:center;  padding-top:30px; padding-bottom:30px; background-color:#4C2099; margin-bottom:0px">
            <a href="" title="Clean Code Hangzhou - Hangzhou, China">
                <span style="font-size: 42.0px"><%= group.name %></span>
            </a>
          </h1>
          <div id="chapter-navigation" style="width:100%; background-color:#ffffff">
            <div class="btn-group btn-group-lg" role="group" aria-label="..." style="width:100%;">
              <button type="button" class="btn btn-default" style="width:15%; border-color:#ffffff; color:#888" onClick="onChangePage()">Home</button>
              <button type="button" class="btn btn-default" style="width:15%; border-color:#ffffff; color:#888">Members</button>
              <button type="button" class="btn btn-default" style="width:15%; border-color:#ffffff; color:#888">Photos</button>
              <button type="button" class="btn btn-default" style="width:15%; border-color:#ffffff; color:#888">Discussions</button>
              <button type="button" class="btn btn-default" style="width:15%; border-color:#ffffff; color:#888" onClick="new_event()">New Event</button>



              <ul id="my-links" style="float:right; margin-top:6px; margin-right:6px; margin-bottom:6px; margin-left:4px; font-size:0; padding-left:0; list-style-position:outside; display:block; ">
                <li id="join-link" style="position:relative; line-height:32px;padding:0;font-size:16px;list-style:none;  ">
                  <a href="#" onclick= "group_user_change()" style="text-decoration:none; color:#932A2A; font-weight:bold; padding-top: 10px; padding-right: 18px; padding-bottom: 10px; padding-left: 18px; background-color: #198963; border-radius:4px">
                    <% if(!ingroup) {%>Join us! <%} else {%>
                      Leave <% } %>
                  </a>
                </li>
              </ul>

            </div>
          </div>

        </div>
        <div id="C_context" class="col-md-12" style="min-height:2015px;">

          <div id="C_Nav" class="col-md-3" style="padding-left: 0px;">
            <div id="nav_content" style="background-color:#ffffff;border-width: 1px; border-style: solid;border-color: #eee; padding-left:15px; padding-right:10px">
              <div id="group-info" style="padding-bottom:10px; padding-top:10px;">
                <span>TC coach network is for everything related to competence </span>
              </div>

              <ul class="dividedList" style="list-style-type:none; padding:0px;">
                <li style="border-top-width:1px; border-top-style:solid; border-top-color:#eee; padding-top:6px; margin-left:0px;">
                  <a href="">
                    <span style="width:71%; float:left;">Members</span>
                    <span style="text-align:right; float:none"> <%= group.user.length %></span>
                  </a>
                </li>
                <li style="border-top-width:1px; border-top-style:solid; border-top-color:#eee; padding-top:6px; margin-left:0px;">
                  <a href="">
                    <span style="width:71%; float:left;">Past Event</span>
                    <span style="text-align:right; float:none">3</span>
                  </a>
                </li>
                <li style="border-top-width:1px; border-top-style:solid; border-top-color:#eee; padding-top:6px; margin-left:0px;">
                  <a href="">
                    <span style="width:71%; float:left;">Our calender</span>
                  </a>
                </li>


              </ul>

              <div id="meta-organizers" style="padding-top:30px;">
                <h4><span>Organizer: </span></h4>
                <h5><a href="#"><%= group.owner.fullname %></a></h5>
                <button type="button" class="btn btn-default" aria-label="Contact">
                  <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                </button>
              </div>
              <div id="event-tag" style="padding-top:30px;">
                <h5>We're about:</h5>
              </div>
            </div>

          </div>
          <div id="C_Content" class="col-md-9" style="padding-left:0px">
          	<% if (RecentEvent!= null) { %>
          	<ul id="groupTab" class="nav nav-tabs">
          		<li role="presentation" class="active"><a href="#RecentEvent" data-toggle="tab">Recent Event</a></li>
          		<li role="presentation"><a href="#GroupCalendar" data-toggle="tab">Calendar</a></li>
          	</ul>
          	<div id="groupTabContent" class="tab-content">
          		<div class ="tab-pane active" id="RecentEvent"  style="background-color:#ffffff">
          			<div id="event_title">
          				<h2 style="margin-top:1px"> <%= RecentEvent.topic %></h2>
          			</div>
          			<div id="event-content">
          				<div id="event_when">
                          <time itemprop="startDate" datetime="2015-03-14T09:30:00+08:00">
                          <% var dd = RecentEvent.date %>
                          <h3><%= dd.toLocaleDateString() %></h3>
                          <p class="subtext"><%= dd.getHours() %>:<%= dd.getMinutes() %></p>
                          </time>
                        </div>
	                    <div id="event_where">
	                       <h3><%= RecentEvent.address %></h3>
	                    </div>

	                    <div class="divide_line" id="divide_line" style="padding-bottom:20px; padding-top:10px; display:block; width:100%; line-height:38px; height:0px; border-top-width: thin;border-top-color: #eee;border-top-style: solid;">
	                    </div>

	                    <pre id="event_detail_content" style = "background-color:#fff; border-style:none"><%= RecentEvent.desc %>
	                    </pre>
                    </div>
                </div>
                <div class ="tab-pane" id="GroupCalendar" style="background-color:#ffffff">
					<div id="group-event" style="padding-top:20px; padding-bottom:50px">
					      <ul style="list-style-type:none; padding-left:5px">
					      <% for(var i=0; i<events.length; i++) {%>

					        <li class="group-events" style="margin-bottom:40px; width:95% ">

					          <div class="event-time" style="float:left; width:50%">
					            <% var dd= events[i].date; %>
					            <h5><%= dd.toLocaleDateString() %></h5>
					            <h5><%= dd.getHours() %>:<%= dd.getMinutes() %></h5>
					          </div>
					          <div style="width:100%; float:none">
					            <div class="event-localtion"><%= events[i].address %></div>
					            <div class="event-title">
					            <% var strlink= '/event/show/';
					                strlink = strlink + events[i].id;
					                %>
					            <a href= <%= strlink %> >
					            <%= events[i].topic %></a></div>
					            <div class="event-members">7 <span>hacks Going</span>
					            </div>
					          </div>
					        </li>

					      <% } %>

					      </ul>
					</div>
                </div>
            </div>
            <% } %>
          </div>

        </div>
      </div>
    </div>
  </div>

<script language="javascript">

function onChangePage() {
  window.location.href="/";
}

function new_event(){

  window.location.href="/event/new?id=" + <%= group.id %>;

}

 function group_user_change() {

  <% if (ingroup) {%>
    
    window.location.href="/user/leftgroup/" + <%= group.id %>;
  <% } else{ %>
    window.location.href="/user/joingroup/"+ <%= group.id %>;
  <% } %>

 }


</script>
