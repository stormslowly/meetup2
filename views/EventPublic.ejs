
    <p>
    <% if (action=='new') { %>
    <form class="form-horizontal" method="post" action="/newEvent" id="EventForm1" style="margin-top:40px">
    <% } else { %>
    <form class="form-horizontal" method="post" action="/event/update/<%=eventid%>" id="EventForm1" style="margin-top:40px">
    <% } %>    
        <div class="form-group">
            <label for="inputTopic" class="col-sm-2 control-label">Topic</label>
            <div class="col-sm-8">
            <input type="text" class="form-control" id="inputTopic" name= "Topic" value="<%= topic %>" placeholder="">   
            </div>
        </div>
        
        <div class="form-group">
            <label for="inputOrganizer" class="col-sm-2 control-label">Organizer</label>
            <div class="col-sm-8">
                <select class="form-control" id="inputOrganizer" name="Group" placeholder="">
                <% for(var i=0; i<group.length; i++) {%>
                    <option><%= group[i].name %></option>
                    <% } %>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label for="inputDate" class="col-sm-2 control-label">Begin Date</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputBeginDate" name= "beginDate" value="<%= begindate.toLocaleDateString() %>" placeholder="">
            </div>
        </div>

        <div class="form-group">
            <label for="inputTime" class="col-sm-2 control-label">Begin Time</label>
            <div class="col-sm-8">
            <% var hh= begindate.getHours() %>
            <% if (hh<10) {hh='0'+hh} %>
            <% var mm= begindate.getMinutes() %>
            <% if (mm<10) {mm='0'+mm} %>
                <input type="time" class="form-control" id="inputBeginTime" name= "BeginTime" value="<%= hh %>:<%= mm %>" placeholder="" onclick="_SetTime(this)">
            </div>
        </div>

        <div class="form-group">
            <label for="inputDate" class="col-sm-2 control-label">End Date</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputEndDate" name= "endDate" value="<%= enddate.toLocaleDateString() %>" placeholder="">
            </div>
        </div>

        <div class="form-group">
            <label for="inputTime" class="col-sm-2 control-label">End Time</label>
            <div class="col-sm-8">
            <% hh= enddate.getHours() %>
            <% if (hh<10) {hh='0'+hh} %>
            <% mm= enddate.getMinutes() %>
            <% if (mm<10) {mm='0'+mm} %>
                <input type="time" class="form-control" id="inputEndTime" name= "EndTime" value="<%=hh%>:<%=mm%>" placeholder="" onclick="_SetTime(this)">
            </div>
        </div>

        <div class="form-group">
            <label for="inputAddress" class="col-sm-2 control-label">Address</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputAddress" name="Address" value="<%= address %>" placeholder="">
            </div>
        </div>
        <div class="form-group">
          <label for="inputEvent" class="col-sm-2 control-label">Event</label>
          <div class="col-sm-8">
            <textarea class="form-control col-sm-8" rows="10" id="inputEvent" name="Event"><%= desc %></textarea>
          </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            <% if(action=='new'){ %>
            <button type="submit" class="btn btn-default" form="EventForm1">Public</button>
            <% }else{ %>
            <button type="submit" class="btn btn-default" form="EventForm1">Update</button>
            <% } %>
                
            </div>
        </div>
    </form>

